
extends ../disposicion/index


block contenido
    div.py-10
        h1.text-center.text-4xl.text-extrabold.my-10 Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.text-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                    
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-3(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value= csrfToken)

                    div

                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="email") Email
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" name="email")
                        
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="password") contraseña
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" name="password" placeholder="Tu contraseña")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                        a.text-gray-500.text-xs(href="/auth/olvide-password") ¿Olvidaste tu contraseña?

                    input(class="w-full bg-indigo-600 hover:bg-indigo-400 text-center cursor-pointer text-white font-bold py-2" type="submit" value="Iniciar Sesión")
